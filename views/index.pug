html
    head
        title= title
    style
        include style.css
    body
        #main-container.grid-container
            #container-header.grid-content
                img(src='images/title.jpg' style='width:100%')
            #container-meme.grid-content
                if(username)
                    p Welcome, 
                        span.recordUsername #{username}, 
                        a(href='/signout') signout
                else
                    a(href='/login')
                        button.back sign in 

                h1="Meme list"
                ul.meme-list
                    each meme in memes
                        li
                            a.meme-link.meme-name(href="meme/" + meme.id) price : #{meme.price}
                                br
                                img(src=meme.src).meme
            footer
                p You've visited #{views} sites.